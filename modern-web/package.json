    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/web-components": "^6.3.8",
    "@web/dev-server": "^0.1.22",
    "@web/dev-server-storybook": "^0.3.8",
    "@web/rollup-plugin-html": "^1.10.1",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.1",
    "lit-html": "^2.0.0",
    "storybook": "^6.3.8"
  }
}
